<h1>Have a Burger</h1>
<h2>Burgers to be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">Devour</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Devour</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <input type="text" id="textBox" name="burger_name" placeholder="add a burger">
  </div>

  <button type="submit">Add Burger</button>
  <h4>Add a buger you want to eat!<h4>
</form>
